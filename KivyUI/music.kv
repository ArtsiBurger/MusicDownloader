<PlaylistScreen>:
    orientation: "vertical"
    spacing: 10
    padding: 20

    Label:
        text: "Playlist Selector"
        font_size: "24sp"
        size_hint_y: None
        height: "40dp"

    RecycleView:
        viewclass: "Button"
        data: [{"text": p, "on_press": lambda x=p: root.on_playlist_selection(x)} for p in root.playlists]

        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"