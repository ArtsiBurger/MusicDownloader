<InputScreen>:
    orientation: "vertical"
    spacing: 10
    padding: 20

    TextInput:
        id: user_input
        hint_text: "Type something here"
        multiline: False
        size_hint_y: None
        height: "40dp"

    Button:
        text: "Submit"
        size_hint_y: None
        height: "40dp"
        on_press: root.show_text()

    Label:
        id: output_label
        text: "Your text will appear here"

        
        
